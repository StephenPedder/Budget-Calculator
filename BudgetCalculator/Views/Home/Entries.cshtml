@model IEnumerable<BudgetCalculator.Data.Entry>

@{
    ViewBag.Title = "Entries";
}

<h3>@ViewBag.Title</h3>

<div class="col-md-1">
    @Html.ActionLink("Add Entry", "AddEntry", "Home")
</div>

<div class="col-md-12">
    <table class="table table-striped table-bordered">
        <thead>
            <th>Date</th>
            <th>Description</th>
            <th>Category</th>
            <th>Amount</th>
            <th></th>
        </thead>

        @foreach (var entry in Model)
        { 
            <tbody>
                <td>@entry.Date</td>
                <td>@entry.Description</td>
                <td>@entry.BudgetCategory</td>
                <td>@entry.Amount</td>
                <td>edit | delete</td>
            </tbody>
        }
    </table>
</div>
